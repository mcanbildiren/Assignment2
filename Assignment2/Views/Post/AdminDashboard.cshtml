
@{
    ViewData["Title"] = "Admin Paneli";
}

@model List<PostViewModel>

	<table class="table">
	<thead>
		<tr>
			<th>Başlık</th>
			<th>İçerik</th>
			<th>Yazar</th>
			<th>Kategori</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Title</td>
				<td>@item.Text</td>
				<td>@item.Publisher</td>
				<td>@item.Category.Name</td>
				<td>
					<a asp-controller="Post" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
				</td>
				<td>					
                    <a asp-controller="Post" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>


<div class="text-center">
    <h1>Admin Paneli</h1>
    <a asp-controller="Post" asp-action="Create" class="btn btn-primary">Yeni Post Ekle</a>
</div>
<div>
	<table class="table table-borderless">
		<tbody>
			<tr>
				@foreach (var item in Model)												
				{
					<td>
						<div class="card" style="width: 18rem; margin:auto;">
							<img src="" class="card-img-top" alt="">
							<div class="card-body">
								<h4 class="card-title">@item.Title</h4>
								<h5 class="card-title">@item.Category.Name</h5>
								<p class="card-text">
									@item.Text
								</p>
								<a href="#" class="btn btn-primary">Devamını oku</a>
							</div>
						</div>
					</td>
				}
			</tr>
		</tbody>
	</table>
</div>



<div class="col-md-2 offset-5" style="margin-top:20px;">
